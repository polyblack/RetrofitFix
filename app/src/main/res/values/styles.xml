<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextCaption" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>

    <style name="TextNormal" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/green</item>
        <item name="boxStrokeColor">@color/green</item>
        <item name="hintTextColor">@color/green</item>
        <item name="hintTextAppearance">@style/TextCaption</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="theme">@style/TextInputEditTheme</item>
    </style>

    <style name="TextInputEditTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColorHighlight">@color/selection</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/transparent</item>
    </style>
</resources>
